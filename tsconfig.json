{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es5",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "declaration": true,
    "listFiles": false,
    "outDir": "./"
  },
  "filesGlob": [
    "src/def/index.d.ts",
    "src/lib/**/*.ts",
    "src/nodes/**/*.ts",
    "src/res/**/*.ts",
    "src/test/**/*.ts"
  ],
  "files": [
    "src/def/index.d.ts",
    "src/lib/console-logger.ts",
    "src/lib/index.ts",
    "src/lib/launcher.ts",
    "src/lib/scene-flows.ts",
    "src/lib/scene-manager.ts",
    "src/lib/scene-storage.ts",
    "src/lib/settings.ts",
    "src/lib/starter.ts",
    "src/lib/validate.ts",
    "src/nodes/current-scene.ts",
    "src/nodes/scene-startstop.ts",
    "src/nodes/scene.ts",
    "src/res/index.ts",
    "src/res/strings.ts",
    "src/test/index.ts"
  ],
  "atom": {
    "rewriteTsconfig": true
  }
}
